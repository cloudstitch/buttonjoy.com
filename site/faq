  <script>
    var theSwitch = document.getElementById('myonoffswitch');
    if (theSwitch) {
      // Switch pages.
      theSwitch.addEventListener('change', function() {
        document.location = document.getElementById('switchButton').getAttribute('href');
      });
      setTimeout(function() {
        theSwitch.checked = isCharity();
      }, 500);
    }
  </script>
